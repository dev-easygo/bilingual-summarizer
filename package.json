{
  "name": "bilingual-summarizer",
  "version": "1.1.0",
  "description": "A text summarization package for Arabic and English content that provides sentiment analysis, topic extraction, and more",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "dev": "ts-node src/index.ts",
    "lint": "eslint --ext .ts src/",
    "prepare": "npm run build"
  },
  "keywords": [
    "summarizer",
    "arabic",
    "english",
    "text-analysis",
    "nlp",
    "sentiment",
    "topics"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.6.2",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.24.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "arajs": "^1.0.13",
    "langdetect": "^0.2.1",
    "language-detector": "^1.0.1",
    "natural": "^8.0.1",
    "node-summarizer": "^1.0.7",
    "reading-time": "^1.5.0",
    "sentiment": "^5.0.2",
    "sentiment-multilang": "^0.0.2"
  },
  "optionalDependencies": {
    "@iamtung/camel-tools": "^1.4.0",
    "farasa": "^0.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 50,
        "branches": 30,
        "lines": 50,
        "functions": 50
      }
    }
  }
}
